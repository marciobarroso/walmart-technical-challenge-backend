{
  "name": "walmart-technical-challenge-backend",
  "version": "1.0.0",
  "description": "Walmart Technical Challenge for Fullstack Developer",
  "author": "Marcio Alves Barroso",
  "license": "ISC",
  "main": "scr/index.ts",
  "scripts": {
    "clean": "rimraf coverage dist logs",
    "build": "npm run lint && tsc -p tsconfig.release.json",
    "start": "node ./dist/src/index.js",
    "dev": "NODE_ENV=dev nodemon -e js,ts,json --exec ts-node ./src/index.ts",
    "lint": "eslint . --ext .ts",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:security": "retire"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/convict": "^5.2.1",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.17",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.2",
    "nodemon": "^2.0.6",
    "retire": "^2.2.4",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "convict": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.11.9",
    "morgan": "^1.10.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marciobarroso/walmart-technical-challenge-backend.git"
  },
  "bugs": {
    "url": "https://github.com/marciobarroso/walmart-technical-challenge-backend/issues"
  },
  "homepage": "https://github.com/marciobarroso/walmart-technical-challenge-backend#readme",
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "functions": 95,
        "lines": 95
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test && npm run test:security"
    }
  }
}